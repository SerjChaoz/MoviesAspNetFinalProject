@model IEnumerable<MoviesAspFinalProject.Models.Role>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Request.IsAuthenticated)
{
    <p>
    @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Actor.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Movie.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Actor.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.RoleId })
            @if (Request.IsAuthenticated)
            {
                <span> | </span>
                @Html.ActionLink("Edit", "Edit", new { id = item.RoleId });
                <span> | </span>
                @Html.ActionLink("Delete", "Delete", new { id = item.RoleId });
            }
        </td>
    </tr>
}

</table>
